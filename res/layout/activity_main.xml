<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyActivity" >

    <RelativeLayout
        android:id="@+id/ll_regiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/startAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            style="@style/btnStyleBlackpearl"
            android:text="Start Monitor" />

        <Button
            android:id="@+id/stopAlarm"
            style="@style/btnStyleBlackpearl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startAlarm"
            android:layout_marginBottom="5dp"
            android:text="Stop Monitor" />

        <Button
            android:id="@+id/appUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stopAlarm"
            style="@style/btnStyleBlackpearl"
            android:layout_marginBottom="5dp"
            android:text="App Usage" />
 <Button
            android:id="@+id/bgApps"
            style="@style/btnStyleBlackpearl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appUsage"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:text="Background App Usage" />
        <Button
            android:id="@+id/runningApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bgApps"
            android:layout_marginBottom="5dp"
            style="@style/btnStyleBlackpearl"
            android:text="All Apps" />

        <Button
            android:id="@+id/dataUsage"
            android:layout_width="match_parent"
            style="@style/btnStyleBlackpearl"
            android:layout_height="wrap_content"
            android:layout_below="@+id/runningApps"
            android:layout_marginBottom="5dp"
            android:text="Data Usage" />

        <Button
            android:id="@+id/trackLocation"
            android:layout_width="match_parent"
            style="@style/btnStyleBlackpearl"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataUsage"
            android:layout_marginBottom="5dp"
            android:text="My Location" />


    </RelativeLayout>

</ScrollView>